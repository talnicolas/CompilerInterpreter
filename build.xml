<project name="MiniLang" basedir="." default="main">

	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/jar" />
	<property name="main.interpreter" value="MiniLangInterpreter" />
	<property name="main.compiler" value="MiniLangCompiler" />
	
	<property name="test.dir" value="test" />
	<property name="output.dir" value="output" />
	<property name="test1" value="test" />
	<property name="test2" value="test2" />

	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" nowarn="on" includeantruntime="false" />
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${main.interpreter}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main.interpreter}" />
			</manifest>
		</jar>
		<jar destfile="${jar.dir}/${main.compiler}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main.compiler}" />
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<mkdir dir="${output.dir}" />
		<echo message="Executing : ${test1}" />
		<java jar="${jar.dir}/${main.interpreter}.jar" output="${output.dir}/${test1}" fork="true">
			<arg value="${test.dir}/${test1}" />
		</java>
		<echo message="Executing : ${test2}" />
		<java jar="${jar.dir}/${main.interpreter}.jar" output="${output.dir}/${test2}" fork="true">
			<arg value="${test.dir}/${test2}" />
		</java>
		<echo message="Executing : java -jar ${jar.dir}/${main.compiler}.jar" />
		<java jar="${jar.dir}/${main.compiler}.jar" fork="true" />
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${output.dir}" />
	</target>

	<target name="main" depends="clean,run" />

</project>
